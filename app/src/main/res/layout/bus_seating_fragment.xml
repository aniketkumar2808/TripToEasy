<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/all_page_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_points"
        android:padding="02dp">

        <TextView
            android:id="@+id/boarding_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="05dp"
            android:text="@string/boarding_point"
            android:textColor="@color/blue_text">

        </TextView>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/dropping_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="05dp"
            android:text="@string/dropping_point"
            android:textColor="@color/blue_text"
            android:visibility="visible"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@+id/select_points"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />
    <TextView
        android:layout_below="@+id/view1"
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_seats"
        android:padding="@dimen/padding_10"
        android:background="@drawable/blue_gradient"
        android:textColor="@color/white"
        android:fontFamily="@font/bold"
        android:textSize="@dimen/text_18"/>


    <LinearLayout
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/one"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_available"
                    android:gravity="center"
                    android:drawableLeft="@drawable/available_drawable"
                    android:drawablePadding="@dimen/padding_15"
                    android:textSize="@dimen/text_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_res_ladies"
                    android:textSize="@dimen/text_10"
                    android:drawableLeft="@drawable/seat_res_ladies"
                    android:drawablePadding="@dimen/padding_15"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_res_gents"
                    android:gravity="center"
                    android:textSize="@dimen/text_10"
                    android:drawableLeft="@drawable/seat_res_gents"
                    android:drawablePadding="@dimen/padding_15"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_blocked"
                    android:gravity="center"
                    android:drawableLeft="@drawable/seat_blocked"
                    android:drawablePadding="@dimen/padding_15"
                    android:textSize="@dimen/text_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_book_ladies"
                    android:textSize="@dimen/text_10"
                    android:drawableLeft="@drawable/book_ladies"
                    android:drawablePadding="@dimen/padding_15"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:padding="5dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seat_book_gents"
                    android:gravity="center"
                    android:textSize="@dimen/text_10"
                    android:drawableLeft="@drawable/book_gents"
                    android:drawablePadding="@dimen/padding_15"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_seats"
            android:layout_gravity="center"
            android:textSize="@dimen/text_10"
            android:drawableLeft="@drawable/seat_selected"
            android:drawablePadding="@dimen/padding_15"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/blue_text"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/book_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_now"
            android:textColor="@color/blue_text"
            android:background="@drawable/white_butten"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/padding_5"
            android:paddingRight="@dimen/padding_10"
            android:paddingBottom="@dimen/padding_5"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/text_18"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Seats"
            android:textColor="@color/white"
            android:fontFamily="@font/regular"
            android:textSize="@dimen/text_14"/>

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/bold"
            android:textSize="@dimen/text_16"
            android:layout_below="@+id/text_one"
            android:layout_marginTop="@dimen/margin_5"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/info_text"
        android:layout_above="@+id/bottom_view"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/destination_lower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:text="Lower"
                    android:fontFamily="@font/regular"
                    android:paddingRight="@dimen/padding_20"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:background="@drawable/orange_butten"/>

                <TextView
                    android:id="@+id/destination_upper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:typeface="serif"
                    android:textStyle="bold"
                    android:textColor="@color/b_six"
                    android:text="Upper"
                    android:fontFamily="@font/regular"
                    android:paddingRight="@dimen/padding_20"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingTop="@dimen/padding_10"
                    android:paddingBottom="@dimen/padding_10"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:background="@drawable/white_butten"/>

            </LinearLayout>

            <TableLayout
                android:id="@+id/seating_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="20dp"
                android:stretchColumns="*">

            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>