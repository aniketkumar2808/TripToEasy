<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_page_bg"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/banner_view"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_package_white"
                    android:layout_gravity="center" />

                <!-- <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="@string/country"
                     android:textColor="@color/white"
                     android:textSize="@dimen/text_16"
                     android:fontFamily="@font/regular"/>-->

                <TextView
                    android:visibility="gone"
                    android:id="@+id/search_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18"
                    android:text="Location"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="@dimen/margin_10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:orientation="vertical">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/country_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/white_butten"
                    android:hint="Location"
                    android:padding="@dimen/padding_15"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_down_arrow"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/package_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/white_butten"
                    android:hint="@string/holiday_type"
                    android:padding="@dimen/padding_15"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:layout_marginTop="@dimen/margin_10"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/white_butten"
                    android:hint="@string/package_duration"
                    android:padding="@dimen/padding_15"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:layout_marginTop="@dimen/margin_10"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/doj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/white_butten"
                    android:hint="Date of Journey"
                    android:padding="@dimen/padding_15"
                    android:layout_marginRight="@dimen/margin_5"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:layout_marginTop="@dimen/margin_10"
                    />

                <TextView
                    android:id="@+id/search_holiday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_15"
                    android:text="@string/search"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bold"
                    android:background="@drawable/blue_butten"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Deals"
                    android:layout_marginTop="@dimen/padding_30"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/package_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_10">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>